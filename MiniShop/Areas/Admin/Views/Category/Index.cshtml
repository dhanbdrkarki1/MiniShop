@using MiniShop.Models.Entity;
@model List<Category>
@{
    ViewData["Title"] = "Category List";
}
<div class="container">
    <div class="row">

        <div class="col-6 col-sm-12 col-md-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 col-md-6 col-sm-12 mb-sm-2 text-sm-left text-md-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary text-light">
                <i class="bi bi-plus-circle-dotted"></i> New Category
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="col-6">
                <h4>No category has been added yet.</h4>
            </div>
        }
        else
        {

            <table class="table-light table-striped table-bordered table-hover table-responsive-sm table-responsive-lg table-responsive-md">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Modified Date</th>
                        <th>Created Date</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Description</td>
                            <td>@obj.ModifiedDate</td>
                            <td>@obj.CreatedDate</td>
                            <td>
                                <div class="row" role="group">
                                    <div class="d-flex align-items-center justify-content-evenly p-3">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-warning ml-auto py-2">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger ml-auto py-2">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                     </div>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>