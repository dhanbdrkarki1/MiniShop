@using MiniShop.Models.Entity;
@model List<Product>

<div class="container">
    <div class="row">

        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn bg-primary text-light">
                <i class="bi bi-plus-circle-dotted"></i> New Product
            </a>
        </div>
        <table id="tblProductData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock Quantity</th>
                    <th>Created Date</th>
                    <th>Modified Date</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}