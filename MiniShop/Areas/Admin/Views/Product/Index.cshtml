@using MiniShop.Models.Entity;
@model List<Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="container">
    <div class="row">

        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 col-md-6 col-sm-12 mb-sm-2 text-sm-left text-md-right">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary text-light">
                <i class="bi bi-plus-circle-dotted"></i> New Product
            </a>
        </div>
        <table id="tblProductData" class="display responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>SubCategory</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock Quantity</th>
                    <th>Created Date</th>
                    <th>Modified Date</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}